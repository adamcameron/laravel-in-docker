{
    "name" : "adamcameron/laravel-in-docker",
    "description" : "Investigating Laravel",
    "type" : "project",
    "license" : "LGPL-3.0-only",
    "require": {
        "php" : "^8.3",
        "ext-bcmath": "*",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-gd": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-pcntl": "*",
        "ext-posix": "*",
        "ext-pcre": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-session": "*",
        "ext-simplexml": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*",
        "ext-zend-opcache": "*",
        "ext-zip": "*",
        "doctrine/dbal": "^3.7",
        "guzzlehttp/guzzle": "^7",
        "symfony/http-foundation": "^7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "phpmd/phpmd": "^2",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "psr-4": {
            "adamcameron\\lid\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "adamcameron\\lid\\tests\\": "tests/"
        }
    },
    "scripts" : {
        "test": "phpunit --display-deprecations",
        "phpmd": "phpmd src,tests text phpmd.xml",
        "phpcs": "phpcs src tests",
        "test-all": [
            "composer validate --strict",
            "@test",
            "@phpmd",
            "@phpcs"
        ]
    }
}
